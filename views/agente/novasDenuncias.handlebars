<div class="secao">
    <h3>Denúncias Novas</h3>

    {{#if denuncias.length}}

    {{#each denuncias}}
    <div class="card denuncias-card">
        <div class="denuncias-card-infomacoes">
            <div>
                <p>{{protocolo}}</p>
            </div>
            <div>
                <p>{{formatDate this.data}}</p>
            </div>
        </div>
        <div class="denuncias-card-botoes">
            <div>
                <form action="/agente/atribuir/{{_id}}" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-light">Atribuir <i class="bi bi-plus-square"></i></button>
                </form>
            </div>
            <div>
                <a href="/agente/visualizar/{{_id}}" class="btn btn-dark">Visualizar <i class="bi bi-eye"></i></a>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{else}}
<p>Nenhuma denúncia nova encontrada.</p>
{{/if}}
</div>